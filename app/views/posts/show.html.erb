<h1><%= @post.title %></h1>

<h2><%= @post.content %></h2>

Categories:
<% @post.categories.each do |category| %>
  <%= category.name %>
<% end %>

<h3>comments</h3>
<% @post.comments.each do |comment| %>
  <%= comment.name %>
<% end %>

<%= form_for comment, @post.comment.build do |p| %>
  <%= p.label :content %>
  <%= p.text_field :content %>
  <%= p.submit %>
<% end %>