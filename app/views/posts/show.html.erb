<h1><%= @post.title %></h1>

<h2><%= @post.content %></h2>

Categories:
<% @post.categories.each do |category| %>
  <%= category.name %>
<% end %>

<h3>comments</h3>
<% @post.comments.each do |comment| %>
  <%= comment.user %> says: <%= comment.content %> <br><br>
<% end %>

<%= form_for (comment = @post.comments.build) do |p| %>
  <%= p.hidden_field :post_id, :value => @post.id %>
  <%= p.label :content %>
  <%= p.text_field :content %><br><br>
  <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :username)) %>
  <%= p.fields_for :user, comment.build_user do |u| %>
    <%= u.text_field :username %>
  <% end %>
  <%= p.submit %>
<% end %>
