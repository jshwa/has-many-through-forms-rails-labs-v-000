<h1><%= @post.title %></h1>

<h2><%= @post.content %></h2>

Categories:
<% @post.categories.each do |category| %>
  <%= category.name %>
<% end %>

<h3>comments</h3>
<% @post.comments.each do |comment| %>
  <%= comment.name %>
<% end %>

<%= form_for (Comment.new) do |p| %>
  <%= p.label :content %>
  <%= p.text_field :content %><br><br>
  <%= fields_for :user comment.user.build do |u| %>
  <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :username)) %>
  <% end %>
  <%= p.submit %>
<% end %>
